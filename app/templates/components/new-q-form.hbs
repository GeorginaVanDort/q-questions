<div>
  <h1>Add a New Q</h1>
  <hr>
    <form>
      <div class="form-group">
        <label for="title">Your Q</label>
        {{input value=text id="text"}}
      </div>
      <div class="form-group">
        <label for="date">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="neighborhood">Add Extra Details Here</label>
        <br>
        {{textarea rows="6" cols="40" value=notes id="notes"}}
      </div>
      <button class="btn"{{action 'save'}}>Save</button>
    </form>
</div>
